<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/whole_app_color"
    >

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/_home_page_constraint_layout"
            android:layout_marginTop="32dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_margin="16dp"
                android:contentDescription="@string/profile_page"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                app:layout_constraintTop_toTopOf="@+id/_home_page_constraint_layout"
                app:layout_constraintStart_toStartOf="@+id/_home_page_constraint_layout"/>
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/logo"
                android:layout_margin="16dp"
                android:contentDescription="@string/profile_page"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                app:layout_constraintTop_toTopOf="@+id/_home_page_constraint_layout"
                app:layout_constraintEnd_toEndOf="@+id/_home_page_constraint_layout"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/saturdaytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturday"
                app:layout_constraintTop_toBottomOf="@+id/profile_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/saturdayResycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="false"
                app:layout_constraintTop_toBottomOf="@+id/saturdaytxt"
                app:layout_constraintStart_toStartOf="@+id/saturdaytxt"
                tools:listitem="@layout/category_card"
                android:layout_marginTop="8dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sundaytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunday"
                app:layout_constraintTop_toBottomOf="@+id/saturdayResycle"
                app:layout_constraintStart_toStartOf="@+id/saturdaytxt"
                android:textSize="18sp"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sundayRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/sundaytxt"
                app:layout_constraintStart_toStartOf="@+id/sundaytxt"
                tools:listitem="@layout/category_card"
                android:layout_marginTop="8dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mondaytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                app:layout_constraintTop_toBottomOf="@+id/sundayRecycle"
                app:layout_constraintStart_toStartOf="@+id/saturdaytxt"
                android:textSize="18sp"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mondayRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/mondaytxt"
                app:layout_constraintStart_toStartOf="@+id/mondaytxt"
                tools:listitem="@layout/category_card"
                android:layout_marginTop="8dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tuesdaytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                app:layout_constraintTop_toBottomOf="@+id/mondayRecycle"
                app:layout_constraintStart_toStartOf="@+id/saturdaytxt"
                android:textSize="18sp"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tuesdayRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/tuesdaytxt"
                app:layout_constraintStart_toStartOf="@+id/tuesdaytxt"
                tools:listitem="@layout/category_card"
                android:layout_marginTop="8dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/wednesdaytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"
                app:layout_constraintTop_toBottomOf="@+id/tuesdayRecycle"
                app:layout_constraintStart_toStartOf="@+id/saturdaytxt"
                android:textSize="18sp"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wednesdayRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/wednesdaytxt"
                app:layout_constraintStart_toStartOf="@+id/wednesdaytxt"
                tools:listitem="@layout/category_card"
                android:layout_marginTop="8dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/thursdtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thursday"
                app:layout_constraintTop_toBottomOf="@+id/wednesdayRecycle"
                app:layout_constraintStart_toStartOf="@+id/saturdaytxt"
                android:textSize="18sp"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/thursRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/thursdtxt"
                app:layout_constraintStart_toStartOf="@+id/thursdtxt"
                tools:listitem="@layout/category_card"
                android:layout_marginTop="8dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fridaytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday"
                app:layout_constraintTop_toBottomOf="@+id/thursRecycle"
                app:layout_constraintStart_toStartOf="@+id/saturdaytxt"
                android:textSize="18sp"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fridayRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/fridaytxt"
                app:layout_constraintStart_toStartOf="@+id/fridaytxt"
                tools:listitem="@layout/category_card"
                android:layout_marginTop="8dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
